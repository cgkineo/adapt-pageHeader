{{! make the _globals object in course.json available to this template}}
{{import_globals}}

<div class="pageheader__inner">

  {{#if _hasTextBelowImage}}
  <div class="pageheader__image-container">
    <img class="pageheader__image js-pageheader-image" {{#if _image.alt}} zaria-label="{{{compile_a11y_normalize _image.alt}}}"{{/if}} />
  </div>
  {{/if}}

  {{#any displayTitle subtitle body instruction}}
  <div class="pageheader__header">
    <div class="pageheader__header-inner">

      <div class="pageheader__content">

        {{#if displayTitle}}
        <div class="pageheader__title">

          {{#unless _disableAccessibilityState}}
          <div class="js-heading" data-a11y-heading-type="page"></div>
          {{~/unless~}}

          <div class="pageheader__title-inner"{{#unless _disableAccessibilityState}} aria-hidden="true"{{/unless}}>
            {{~{compile displayTitle}~}}
          </div>

        </div>
        {{/if}}

        {{#if subtitle}}
        <div class="pageheader__subtitle">
          <div class="pageheader__subtitle-inner">
            {{{compile subtitle}}}
          </div>
        </div>
        {{/if}}

        {{#if body}}
        <div class="pageheader__body">
          <div class="pageheader__body-inner">
            {{{compile body}}}
          </div>
        </div>
        {{/if}}

        {{#if instruction}}
        <div class="pageheader__instruction">
          <div class="pageheader__instruction-inner">
            {{{compile instruction}}}
          </div>
        </div>
        {{/if}}

      </div>

    </div>
  </div>
  {{/any}}

</div>
